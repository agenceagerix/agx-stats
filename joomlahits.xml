<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade">
    <name>COM_JOOMLAHITS</name>
    <author>Hugo Dantas - Agence Agerix https://www.agerix.fr</author>
    <authorEmail>hugodantas33@gmail.com</authorEmail>
    <creationDate>2025-07-21</creationDate>
    <copyright>Copyright (C) 2025. All Rights Reserved</copyright>
    <license>GNU/GPL Version 2 or later - http://www.gnu.org/licenses/gpl-2.0.html</license>
    <version>1.2.0</version>
    <description>JoomlaHits</description>
    <namespace path="src">Joomla\Component\JoomlaHits</namespace>
    <files folder="site">
    </files>
    <administration>
        <files folder="admin">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>direct_seo_analysis.php</filename>
            <filename>direct_seo_fix.php</filename>
            <filename>direct_ai_seo_fix.php</filename>
            <filename>ai_provider.php</filename>
            <filename>direct_targeted_img_fix.php</filename>
            <folder>language</folder>
            <folder>services</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
        </files>
        <languages folder="admin">
            <language tag="fr-FR">language/fr-FR/fr-FR.com_joomlahits.ini</language>
            <language tag="fr-FR">language/fr-FR/fr-FR.com_joomlahits.sys.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.com_joomlahits.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.com_joomlahits.sys.ini</language>
        </languages>
        <menu img="class:default">COM_JOOMLAHITS</menu>
        <submenu>
            <menu link="option=com_joomlahits" view="controlpanel" img="class:dashboard"
                alt="JoomlaHits/ControlPanel">COM_JOOMLAHITS_CONTROLPANEL</menu>
            <menu link="option=com_joomlahits&amp;view=articles" view="articles" img="class:list"
                alt="JoomlaHits/Articles">COM_JOOMLAHITS_ARTICLES</menu>
            <menu link="option=com_joomlahits&amp;view=dashboard" view="dashboard" img="class:chart"
                alt="JoomlaHits/Dashboard">COM_JOOMLAHITS_DASHBOARD_MENU</menu>
            <menu link="option=com_joomlahits&amp;view=seoanalysis" view="checkseo" img="class:search"
                alt="JoomlaHits/CheckSeo">COM_JOOMLAHITS_CHECKSEO_MENU</menu>
        </submenu>
    </administration>
</extension>